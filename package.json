{
  "name": "nestjs-task-management",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "prettier": "prettier \"**/*.{js,ts}\" --check",
    "prettier:fix": "npm run prettier -- --write",
    "start": "NODE_ENV=development ts-node -r tsconfig-paths/register src/main.ts",
    "start:docker": "docker-compose up --build",
    "watch": "NODE_ENV=development nodemon",
    "watch:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "NODE_ENV=production node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint:fix": "npm run lint -- --fix",
    "format": "npm run prettier:fix && npm run lint:fix",
    "test": "npm run test:e2e && npm run test:unit",
    "test:e2e": "jest --config ./test/jest-e2e.json --verbose --runInBand --passWithNoTests --testTimeout=120000 --forceExit",
    "test:unit": "jest --config ./test/jest-unit.json --verbose --runInBand --passWithNoTests --testTimeout=120000 --forceExit",
    "test:watch:e2e": "npm run test:e2e -- --watch",
    "test:watch:unit": "npm run test:unit -- --watch",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/config/typeorm.config.ts",
    "typeorm:create": "npm run typeorm migration:create -- -n",
    "typeorm:generate": "npm run typeorm migration:generate -- -n",
    "typeorm:run": "npm run typeorm migration:run",
    "typeorm:revert": "npm run typeorm migration:revert",
    "generate:resource": "nest g resource"
  },
  "dependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@lambdascrew/utility": "1.0.5",
    "@nestjs/cli": "7.6.0",
    "@nestjs/common": "7.6.17",
    "@nestjs/core": "7.6.17",
    "@nestjs/graphql": "7.10.6",
    "@nestjs/jwt": "7.2.0",
    "@nestjs/passport": "7.1.5",
    "@nestjs/platform-express": "7.6.17",
    "@nestjs/terminus": "7.2.0",
    "@nestjs/typeorm": "7.1.5",
    "@types/express": "4.17.11",
    "@types/lodash": "4.14.170",
    "@types/node": "15.12.2",
    "apollo-server-core": "2.25.2",
    "apollo-server-express": "2.25.1",
    "aws-sdk": "2.946.0",
    "bcryptjs": "2.4.3",
    "body-parser": "1.19.0",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.1",
    "cookie-parser": "1.4.5",
    "dotenv": "10.0.0",
    "dynamoose": "2.7.3",
    "form-data": "4.0.0",
    "got": "11.8.2",
    "graphql": "15.5.0",
    "graphql-tools": "7.0.5",
    "js-yaml": "4.1.0",
    "lodash": "4.17.21",
    "mailgun.js": "3.5.1",
    "moment": "2.29.1",
    "mysql": "2.18.1",
    "nestjs-dynamoose": "0.3.2",
    "node-fetch": "2.6.1",
    "nodemailer": "6.6.1",
    "passport": "0.4.1",
    "passport-jwt": "4.0.0",
    "query-string": "7.0.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.6.7",
    "sqs-consumer": "5.5.0",
    "ts-node": "10.0.0",
    "typeorm": "0.2.34",
    "typescript": "4.3.2",
    "utils-decorators": "1.10.0",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@nestjs/testing": "7.6.18",
    "@types/faker": "4.1.12",
    "@types/jest": "26.0.24",
    "@types/moment": "2.13.0",
    "@types/supertest": "2.0.10",
    "eslint": "7.30.0",
    "faker": "4.1.0",
    "husky": "4.2.5",
    "jest": "26.2.2",
    "lint-staged": "11.0.1",
    "nodemon": "2.0.12",
    "prettier": "2.3.2",
    "supertest": "4.0.2",
    "ts-jest": "26.1.4",
    "tsconfig-paths": "3.10.1",
    "tslint": "6.1.3",
    "tslint-config-prettier": "1.18.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "npm run lint",
      "npm run prettier"
    ]
  }
}
