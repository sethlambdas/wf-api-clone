{
  "moduleFileExtensions": ["js", "json", "ts"],
  "moduleDirectories": ["node_modules", "src"],
  "rootDir": "./",
  "modulePaths": ["<rootDir>"],
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "../common/(.*)": ["<rootDir>/../src/graphql/common/$1"],
    "@graphql:dynamodb/(.*)": ["<rootDir>/../src/graphql/dynamodb/$1"],
    "@src:config/(.*)": ["<rootDir>/../src/config/$1"]
  }
}
